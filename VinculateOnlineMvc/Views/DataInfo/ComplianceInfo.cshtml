@model VinculateOnlineMvc.Models.Compliance

@{
    Layout = null;
}

<div id="header">
    <div class="cImageDoc">
        <center>
            <p>&nbsp;&nbsp;&nbsp;&nbsp; <a href="/es/home.html"><img src="~/images/banco_procredit_logo_main.png" alt="banco procredit logo main"></a></p>
        </center>
    </div>

</div>

<style>
    input {
        background: transparent;
        border: none;
        border-bottom: solid gray;
        outline: medium;
        width: 30%;
    }
</style>

<div class="custom">

    <div class="row">
        <div class="col-md-4">
            <form asp-action="ComplianceInfo">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div style="width: 15%; text-align: right">
                    <p><a asp-area="" asp-controller="DataInfo" asp-action="Deposits"><img src="/images/ATRAS.png" alt="Banner Vinculate" width="50" height="50"></a> </p>
                </div>

                <p>&nbsp;</p>


                <div style="width: 100%; text-align: center; float: left">
                    <div class="form-group">
                        <div class="checkbox">
                            <div style="width: 100%; text-align: center">

                                <section>
                                    Conozco y acepto todas las condiciones informadas en la presente solicitud,
                                </section>
                                <section>
                                    así como el reglamento de cuentas de ahorros.
                                </section>
                                <input asp-for="PrivacyAgrement" required />


                                <p>&nbsp;</p>
                                <section>Declaro que los recursos depósitados en la cuenta provienen de mi  </section>
                                <section>
                                    actividad economica y/o son parte de mi patrimonio. Estos recursos son de origen licito.
                                </section>
                                <input asp-for="LawfulMoney" required />

                                <p>&nbsp;</p>
                                <section>  Declaro que los recursos no son administrado a favor de terceras personas.  </section>
                                <input asp-for="OwnMoney" required />
                                <p>&nbsp;</p>
                                <section>Declaro que toda la información registrada es auditable. </section>
                                <input asp-for="AcceptAgrement" required />
                            </div>
                        </div>
                    </div>
                </div>
                @Html.HiddenFor(x => x.BasicInfoClientID);
                <p>&nbsp;</p>                <p>&nbsp;</p>                 <p>&nbsp;</p>
                <center>
                    <button type="submit" name="isSubmit" value="true" style="border-style: none;background: none;">
                        <img src="/images/Continuar.png" alt="Banner Vinculate" width="150" height="60" />
                    </button>
                </center>
            </form>
            <p>&nbsp;</p>                <p>&nbsp;</p>                 <p>&nbsp;</p>
            <p>&nbsp;</p>                <p>&nbsp;</p>                 <p>&nbsp;</p>
            <center>
                <img src="/images/BannerInferior.png" width="2600" height="30">
                <div class="moduletable cSlider">
                    <p>© 2015 Todos los derechos reservados. <br><strong><span class="red">Banco ProCredit Colombia</span></strong></p>
                </div>
            </center>
        </div>
    </div>
</div>
