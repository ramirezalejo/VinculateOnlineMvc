@model VinculateOnlineMvc.Models.IdentityDocument

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>test</title>
</head>
<body>

<h4>IdentityDocument</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="test">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <h3 style="color: #151515;"> <label asp-for="DocNumber" class="control-label"> Ingresa el número de tu cédula</label></h3>
                <input type="number" maxlength="10" asp-for="DocNumber" class="form-control" />
                <span asp-validation-for="DocNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3 style="color: #151515;"> <label asp-for="NameCityDocumentExp" class="control-label"> Ingresa el lugar de expedición</label></h3>
                <input asp-for="NameCityDocumentExp" class="form-control" />
                <span asp-validation-for="NameCityDocumentExp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3> <p style="color: #151515;"><label asp-for="ExpDate" class="control-label">Fecha de expedición de tu cédula</label></p></h3>
                <h3> <input type="date" name="fecha" min="1970-01-01" />  </h3>
                <span asp-validation-for="ExpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3> <p style="color: #151515;"><label asp-for="FileDocNumber" class="control-label">Adjunta una imagen de tu cédula</label> </p></h3>
                <h2> <input type="file" accept=".pdf,.jpg,.png" multiple /></h2>
                <span asp-validation-for="FileDocNumber" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
