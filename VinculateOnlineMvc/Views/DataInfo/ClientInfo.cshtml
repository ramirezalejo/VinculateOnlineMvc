                    <h2><label asp-for="FirstLastName" class="control-label">Primer Apellido*</label></h2>
                    <input asp-for="FirstLastName" class="form-control" />
                    <span asp-validation-for="FirstLastName" class="text-danger"></span>

   
                </div>

                <div style="width: 50%; text-align: center; float: left;">

                    <h2>  <label asp-for="SecondName" class="control-label">Segundo Nombre</label></h2>
                    <input asp-for="SecondName" width="300" class="form-control" />
                    <span asp-validation-for="SecondName" class="text-danger"></span>

                    <p>&nbsp;</p>

                    <h2><label asp-for="SecondLastName" class="control-label">Segundo Apellido</label></h2>
                    <input asp-for="SecondLastName" class="form-control" />
