@model VinculateOnlineMvc.Models.ClientBasicInfo
@{
    Layout = null;
}


<div id="header">
    <div class="cImageDoc">
        <center>
            <p>&nbsp;&nbsp;&nbsp;&nbsp; <a href="/es/home.html"><img src="~/images/banco_procredit_logo_main.png" alt="banco procredit logo main"></a></p>
        </center>
    </div>

</div>

<style>
    input {
        background: transparent;
        border: none;
        border-bottom: solid gray;
        outline: medium;
        width: 50%;
    }
</style>

<div class="row">
    <div class="col-md-4">

        <div style="width: 15%; text-align: right">
            <p><a asp-area="" asp-controller="DataInfo" asp-action="ClientInfo"><img src="/images/ATRAS.png" alt="Banner Vinculate" width="50" height="50"></a> </p>
        </div>

        <form asp-action="ClientInfo_Sec">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div align="center">
                <h1 style="font-size:250%;"><i> Otros datos importantes para Nosotros</i></h1>
                <p>&nbsp;</p>
                <div style="width: 50%; text-align: center; float: left;">
                    @*<h2>   <label asp-for="Gender" class="control-label">Género</label></h2>*@
                    <h2>
                        <label>Género : </label>
                        <select name="Gender">
                            <option>Masculino</option>
                            <option>Femenino</option>
                            <option selected></option>
                        </select>
                    </h2>
                    @*<input asp-for="Gender" class="form-control" />*@
                    <span asp-validation-for="Gender" class="text-danger"></span>
                    <p>&nbsp;</p>

                    <h2><p style="color: #151515;"> <label asp-for="BirthDate" class="control-label"> Fecha de nacimiento</label></h2></p>
                    <input type="date" name="fecha" min="1970-01-01" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

                <div style="width: 50%; text-align: center; float: left;">
                    @*<h2>   <label asp-for="MaritalStatus" class="control-label">Estado Civil</label></h2>
            <input asp-for="MaritalStatus" class="form-control" />*@
                    <h2>
                        <label>Estado Civil : </label>
                        <select name="MaritalStatus">
                            <option>Casado</option>
                            <option>Soltero</option>
                            <option>Viudo</option>
                            <option>Divorsiado/Separado</option>
                            <option>Union Libre</option>
                            <option selected></option>
                        </select>
                    </h2>
                    <span asp-validation-for="MaritalStatus" class="text-danger"></span>

                    <p>&nbsp;</p>
                    <h2><label asp-for="CityBirthDate" class="control-label">Ciudad de nacimiento</label> </h2>
                    <h2> <input type="text" placeholder="Ejemplo: Bogotá" width="100" name="CityBirthDate" /></h2>
                    <h3><span asp-validation-for="CityBirthDate" class="text-danger"></span></h3>

                    @*<h2><label asp-for="CountryBirthDate" class="control-label">Pais de nacimiento</label></h2>
            <input type="text" name="fecha" min="1970-01-01" />
            <span asp-validation-for="CountryBirthDate" class="text-danger"></span>*@

                    @*placeholder='Ciudad de Nacimiento:'*@
                </div>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <div class="form-group">
                    <p><a asp-area="" asp-controller="DataInfo" asp-action="ContactClientInfo"><img src="/images/Continuar.png" alt="Banner Vinculate" width="150" height="60"></a> </p>
                </div>
                <center>
                    <img src="/images/BannerInferior.png" width="2600" height="30">
                    <div class="moduletable cSlider">
                        <p>© 2015 Todos los derechos reservados. <br><strong><span class="red">Banco ProCredit Colombia</span></strong></p>
                    </div>
                </center>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
