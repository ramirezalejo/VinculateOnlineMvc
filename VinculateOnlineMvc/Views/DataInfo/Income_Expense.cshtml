@model VinculateOnlineMvc.Models.EconomicActivity

@{
    Layout = null;
}

<div id="header">
    <div class="cImageDoc">
        <center>
            <p>&nbsp;&nbsp;&nbsp;&nbsp; <a href="/es/home.html"><img src="~/images/banco_procredit_logo_main.png" alt="banco procredit logo main"></a></p>
        </center>
    </div>

</div>

<style>
    input {
        background: transparent;
        border: none;
        border-bottom: solid gray;
        outline: medium;
        width: 30%;
    }
</style>

<div class="custom">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Income_Expense">
                <div asp-validation-summary="All" class="text-danger"></div>


                <div style="width: 15%; text-align: right">
                    <p><a asp-area="" asp-controller="DataInfo" asp-action="ClientEconomicActivity"><img src="/images/ATRAS.png" alt="Banner Vinculate" width="50" height="50"></a> </p>
                </div>
                <p>&nbsp;</p>

                <div style="width: 100%; text-align: center; float: right;">
                    <p>&nbsp;</p>
                    <div class="form-group">
                        <h2><label asp-for="Income" class="control-label">¿Cuál es el total de tus ingresos mensuales?</label></h2>
                        <input asp-for="Income" placeholder="$ " type="number" class="form-control" required />
                        <span asp-validation-for="Income" class="text-danger"></span>
                    </div>
                    <p>&nbsp;</p>
                    <div class="form-group">
                        <h2><label asp-for="Expense" class="control-label">¿Cuál es el total de tus gastos mensuales?</label></h2>
                        <input asp-for="Expense" placeholder="$ " type="number" class="form-control" required />
                        <span asp-validation-for="Expense" class="text-danger"></span>
                    </div>
                    <p>&nbsp;</p>
                    <div class="form-group">
                        <h2><label asp-for="Assets" class="control-label">¿Cuál es el total de tus Bienes y Activos?</label></h2>
                        <input asp-for="Assets" placeholder="Ejemplo: Casa, Carro, otros" type="number" class="form-control" required />
                        <span asp-validation-for="Assets" class="text-danger"></span>
                    </div>
                    <p>&nbsp;</p>
                    <div class="form-group">
                        <h2><label asp-for="Liabilities" class="control-label">¿Cuál es el total de tus deudas?</label></h2>
                        <input asp-for="Liabilities" placeholder="$ " type="number" class="form-control" required />
                        <span asp-validation-for="Liabilities" class="text-danger"></span>
                    </div>
                </div>

                @Html.HiddenFor(x => x.BasicInfoClientID)
                <p>&nbsp;</p>                <p>&nbsp;</p>                 <p>&nbsp;</p>
                <center>
                    <button type="submit" name="isSubmit" value="true" style="border-style: none;background: none;">
                        <img src="/images/Continuar.png" alt="Banner Vinculate" width="150" height="60" />
                    </button>
                </center>
            </form>
            <p>&nbsp;</p>                <p>&nbsp;</p>                 <p>&nbsp;</p>
            <center>
                <img src="/images/BannerInferior.png" width="2600" height="30">
                <div class="moduletable cSlider">
                    <p>© 2015 Todos los derechos reservados. <br><strong><span class="red">Banco ProCredit Colombia</span></strong></p>
                </div>
            </center>
        </div>
    </div>
</div>


