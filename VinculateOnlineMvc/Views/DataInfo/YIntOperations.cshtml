@model VinculateOnlineMvc.Models.YInternationalOperations

@{
    Layout = null;
}
<div id="header">
    <div class="cImageDoc">
        <center>
            <p>&nbsp;&nbsp;&nbsp;&nbsp; <a href="/es/home.html"><img src="~/images/banco_procredit_logo_main.png" alt="banco procredit logo main"></a></p>
        </center>
    </div>

</div>

<style>
    input {
        background: transparent;
        border: none;
        border-bottom: solid gray;
        outline: medium;
        width: 30%;
    }
</style>

<div class="custom">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="YIntOperations">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div style="width: 15%; text-align: right">
                    <p><a asp-area="" asp-controller="DataInfo" asp-action="Internationaloperations"><img src="/images/ATRAS.png" alt="Banner Vinculate" width="50" height="50"></a> </p>
                </div>

                <div style="width: 50%; text-align: center; float: left;">
                    <div class="form-group">

                        <h2> <label asp-for="TransactionType" class="control-label">Tipo de Transacción</label> </h2>
                        <select name="TransactionType">
                            <option>Importaciones </option>
                            <option>Exportaciones </option>
                            <option>Inversiones  </option>
                            <option>Servicios  </option>
                            <option>Pagos  </option>
                            <option>Transferencias   </option>
                            <option>Préstamos   </option>
                            <option>Otros</option>
                            <option selected></option>
                        </select>
                        @*<input asp-for="TransactionType" class="form-control" />*@
                        <span asp-validation-for="TransactionType" class="text-danger"></span>
                        <p>&nbsp;</p>
                        <h2> <label asp-for="Moneda" class="control-label">Moneda</label> </h2>
                        <input asp-for="Moneda" class="form-control" required/>
                        <span asp-validation-for="Moneda" class="text-danger"></span>
                    </div>

                </div>
                <div style="width: 50%; text-align: center; float: left;">
                    <div class="form-group">
                        <h2>  <label asp-for="CityIntOpe" class="control-label">Ciudad</label>         </h2>
                        <input asp-for="CityIntOpe" class="form-control" required/>
                        <span asp-validation-for="CityIntOpe" class="text-danger"></span>
                        <p>&nbsp;</p>
                        <div class="form-group">
                            <h2><label asp-for="CountryIntOpe" class="control-label">País</label></h2>
                            <input asp-for="CountryIntOpe" class="form-control" required/>
                            <span asp-validation-for="CountryIntOpe" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <p>&nbsp;</p>                <p>&nbsp;</p>                 <p>&nbsp;</p>
                <center>
                    <button type="submit" name="isSubmit" value="true" style="border-style: none;background: none;">
                        <img src="/images/Continuar.png" alt="Banner Vinculate" width="150" height="60" />
                    </button>
                </center>
            </form>
            <p>&nbsp;</p>                <p>&nbsp;</p>                 <p>&nbsp;</p>
            <p>&nbsp;</p>                <p>&nbsp;</p>                 <p>&nbsp;</p>
            <center>
                <img src="/images/BannerInferior.png" width="2600" height="30">
                <div class="moduletable cSlider">
                    <p>© 2015 Todos los derechos reservados. <br><strong><span class="red">Banco ProCredit Colombia</span></strong></p>
                </div>
            </center>
        </div>
    </div>
</div>

